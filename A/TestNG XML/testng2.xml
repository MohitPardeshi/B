<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Automation Testing">
	<listeners>
		<listener
			class-name="com.crm.ExtentReportListener.ExtentReporterNG" />
	</listeners>
	<test name="Login">
		<classes>
			<class name="com.crm.testCases.LoginPageTest">
				<methods>
					<include name="broken.*" />
				</methods>
			</class>
		</classes>
	</test>
	<test name="HomePage">
		<classes>
			<class name="com.crm.testCases.HomePageTest">
			<methods>
				<include name="broken.*" />
			</methods>
			</class>
		</classes>
	</test>
</suite>